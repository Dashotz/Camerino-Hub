# Security: Deny access to sensitive files
<FilesMatch "\.(log|sql|txt)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Deny access to backups directory (contains student data)
<Directory "backups">
    Order allow,deny
    Deny from all
</Directory>

# Deny access to logs directory
<Directory "logs">
    Order allow,deny
    Deny from all
</Directory>

# Protect account.txt if it exists
<Files "account.txt">
    Order allow,deny
    Deny from all
</Files>

# Protect CSV files in uploads (may contain student data)
<FilesMatch "uploads/.*\.csv$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Protect config files
<FilesMatch "config\.(local|prod)\.php$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Protect .env files
<FilesMatch "\.env">
    Order allow,deny
    Deny from all
</FilesMatch>

# Prevent directory listing
Options -Indexes

# Protect .git directory
<DirectoryMatch "\.git">
    Order allow,deny
    Deny from all
</DirectoryMatch>
